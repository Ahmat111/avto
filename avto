// Анимация появления логотипа BMW
window.addEventListener('load', function () {
    const logo = document.querySelector('.logo img');
    logo.style.opacity = '0';
    logo.style.transform = 'scale(0.8)';
    logo.style.transition = 'opacity 1s ease, transform 1s ease';

    setTimeout(() => {
        logo.style.opacity = '1';
        logo.style.transform = 'scale(1)';
    }, 500);
});

 // Анимация появления баннера
window.addEventListener('load', function () {
    const banner = document.querySelector('.photo-module img');
    banner.style.opacity = '0';
    banner.style.transform = 'scale(0.9)';
    banner.style.transition = 'opacity 1s ease, transform 1s ease';

    setTimeout(() => {
        banner.style.opacity = '1';
        banner.style.transform = 'scale(1)';
    }, 1000);
});

